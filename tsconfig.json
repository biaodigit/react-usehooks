{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "config",
    "dist",
    "es",
    "lib",
    "**/__tests__",
    "src/App.tsx",
    "src/index.tsx",
    "src/setupTests.ts"
  ]
}
